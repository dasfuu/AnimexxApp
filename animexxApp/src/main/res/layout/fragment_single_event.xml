<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                tools:context=".SingleeventActivity"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/activity_event_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            >

            <LinearLayout
                android:id="@+id/activity_event_single_base"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <FrameLayout
                    android:id="@+id/activity_event_single_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/card_background_shadow"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/activity_single_header_container2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <ImageView
                            android:id="@+id/activity_event_single_user_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:baselineAlignBottom="false"
                            android:contentDescription="Logo"
                            android:cropToPadding="false"
                            android:scaleType="centerCrop"
                            android:src="@drawable/example_picture" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical" >

                            <LinearLayout
                                android:id="@+id/activity_event_single_start"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/xmpp_test_send_bt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ens_flags_forwarded_blue" />

                                <com.devspark.robototextview.widget.RobotoTextView
                                    app:typeface="roboto_regular"
                                    android:id="@+id/activity_event_single_start_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/activity_event_single_end"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/xmpp_test_send_bt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ens_flags_forwarded_blue" />

                                <com.devspark.robototextview.widget.RobotoTextView
                                    app:typeface="roboto_regular"
                                    android:id="@+id/activity_event_single_end_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/activity_event_single_address"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/xmpp_test_send_bt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ens_flags_forwarded_blue" />

                                <com.devspark.robototextview.widget.RobotoTextView
                                    app:typeface="roboto_regular"
                                    android:id="@+id/activity_event_single_address_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/activity_event_single_animexx"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/ImageView01"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ens_flags_forwarded_blue" />

                                <com.devspark.robototextview.widget.RobotoTextView
                                    app:typeface="roboto_regular"
                                    android:id="@+id/activity_event_single_animexx_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/activity_event_single_atcount"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/xmpp_test_send_bt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ens_flags_forwarded_blue" />

                                <com.devspark.robototextview.widget.RobotoTextView
                                    app:typeface="roboto_regular"
                                    android:id="@+id/activity_event_single_atcount_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/activity_event_single_type"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" >

                                <ImageView
                                    android:id="@+id/xmpp_test_send_bt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@drawable/ens_flags_forwarded_blue" />

                                <com.devspark.robototextview.widget.RobotoTextView
                                    app:typeface="roboto_regular"
                                    android:id="@+id/activity_event_single_type_text"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/activity_event_single_pagelist"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_marginTop="10dp"
                    android:layout_weight="2"
                    android:background="@drawable/card_background_shadow"
                    android:padding="10dp" >

                    <LinearLayout
                        android:id="@+id/activity_event_single_pagelist_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <com.devspark.robototextview.widget.RobotoTextView
                            app:typeface="roboto_regular"
                            android:id="@+id/activity_rpgpost_new_toggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beschreibungsseiten:" />
                    </LinearLayout>
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/activity_event_single_map"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_weight="2"
                    android:background="@drawable/card_background_shadow"
                    android:paddingTop="2dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="10dp"
                        android:orientation="vertical" >

                        <!--<fragment
                            android:id="@+id/activity_event_single_map_fragment"
                            android:name="com.google.android.gms.maps.MapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp" />-->
                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>