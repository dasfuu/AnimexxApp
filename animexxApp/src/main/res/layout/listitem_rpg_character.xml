<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/rpg_list_item_root"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/activity_rpchara_img"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
               android:adjustViewBounds="true"
                android:src="@drawable/test1" />

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="top"
                android:minHeight="30dp"
                android:orientation="vertical"
                android:paddingLeft="8dp" >

                <com.devspark.robototextview.widget.RobotoTextView
                    app:typeface="roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Large Text"
                    android:id="@+id/activity_rpchara_title"/>

                <com.devspark.robototextview.widget.RobotoTextView
                    app:typeface="roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/activity_rpchara_subtitle"/>
            </LinearLayout>
        </LinearLayout>

        <de.meisterfuu.animexx.utils.views.UserViewBig
            android:id="@+id/activity_rpchara_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:paddingTop="8dp"/>

        <com.devspark.robototextview.widget.RobotoTextView
            app:typeface="roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:text="Offen"
            android:id="@+id/activity_rpchara_status"/>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/stroke" />

        <de.meisterfuu.animexx.utils.views.TableDataView
            android:padding="8dp"
            android:minHeight="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_rpchara_table">
        </de.meisterfuu.animexx.utils.views.TableDataView>

    </LinearLayout>

</android.support.v7.widget.CardView>