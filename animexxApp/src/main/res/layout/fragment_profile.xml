<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_profile_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".activitys.profiles.ProfileActivity">

    <LinearLayout
        android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <LinearLayout
            android:id="@+id/activity_profile_single_base"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/activity_profile_single_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/test1"
                android:scaleType="centerCrop"/>



            <FrameLayout
                android:id="@+id/activity_profile_single_common"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/card_background_shadow"
                android:padding="10dp" >

                <de.meisterfuu.animexx.utils.views.TableDataView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_profile_single_common_table">

                </de.meisterfuu.animexx.utils.views.TableDataView>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/activity_profile_single_contact"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/card_background_shadow"
                android:padding="10dp" >

                <de.meisterfuu.animexx.utils.views.TableDataView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_profile_single_contact_table">

                </de.meisterfuu.animexx.utils.views.TableDataView>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/activity_profile_single_pages"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginTop="10dp"
                android:layout_weight="2"
                android:background="@drawable/card_background_shadow"
                android:padding="10dp" >

                <de.meisterfuu.animexx.utils.views.TableDataView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/activity_profile_single_pages_table">

                </de.meisterfuu.animexx.utils.views.TableDataView>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>