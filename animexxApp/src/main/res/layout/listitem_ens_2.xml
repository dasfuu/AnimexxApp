<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ens_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center" xmlns:app="http://schemas.android.com/apk/res/de.meisterfuu.animexx">

    <TextView
        android:id="@+id/ens_list_item_color"
        android:layout_width="20dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/bg_blue2"
        android:text=""
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/ens_list_item_avatar"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:baselineAlignBottom="false"
            android:contentDescription="Avatar"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_contact_picture" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="top"
            android:minHeight="30dp"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:id="@+id/ens_flag_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/ens_list_item_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@+id/label"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/ens_flag_answered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/ens_flags_answered" />

                <ImageView
                    android:id="@+id/ens_flag_forwarded"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-5dp"
                    android:src="@drawable/ens_flags_forwarded" />
            </LinearLayout>

            <TextView
                android:id="@+id/ens_list_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@+id/label"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>