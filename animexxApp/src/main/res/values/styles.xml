<resources>

    <color name="animexx_blue_light">#E8E8FF</color>
    <color name="animexx_blue_light2">#E0E0FF</color>

    <color name="animexx_blue_dark">#4747FF</color>
    <color name="animexx_blue">#5858FF</color>
    <color name="animexx_blue2">#7373FF</color>
    <color name="animexx_blue3">#C3C3FF</color>

    <color name="bg_red">#CC3333</color>
    <color name="bg_lightred">#DD4477</color>
    <color name="bg_purple">#994499</color>
    <color name="bg_blue">#3366CC</color>
    <color name="bg_blue2">#336699</color>
    <color name="bg_green">#329262</color>
    <color name="bg_green2">#109618</color>
    <color name="bg_lightgreen">#66AA00</color>
    <color name="bg_light">#C3C3FF</color>

    <color name="white">#FFFFFF</color>
    <color name="grey">#555555</color>
    <color name="grey_light">#AAAAAA</color>

    <color name="chat_status_online">#58FF58</color>
    <color name="chat_status_away">#FFAB3B</color>
    <color name="chat_status_offline">#888888</color>

    <color name="animexx_blue_notfiy_light">#ff0000ff</color>

    <dimen name="drawer_list_margin_vertical">0dp</dimen>

    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- API 14 theme customizations can go here. -->
    </style>

    <!-- Application theme. -->
    <style name="AnimexxTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/animexx_blue_light</item>
        <item name="android:colorBackground">@color/animexx_blue_light</item>
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/animexx_blue</item>
        <item name="colorPrimaryDark">@color/animexx_blue_dark</item>
        <item name="colorAccent">@color/animexx_blue</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/grey</item>

        <item name="windowActionModeOverlay">true</item>
        <item name="android:textCursorDrawable">@drawable/edit_text_cursor_black</item>
        <item name="android:actionModeStyle">@style/ActionModeStyle</item>
        <item name="actionModeStyle">@style/ActionModeStyle</item>
        <!--<item name="actionModeBackground">@color/animexx_blue</item>-->
    <!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@color/animexx_blue2</item>
        <item name="colorControlActivated">@color/animexx_blue</item>
        <item name="colorControlHighlight">@color/animexx_blue2</item>
       <!-- <item name="drawerArrowStyle">@style/DrawerArrowStyle</item> -->


    </style>

    <style name="DrawerArrowStyle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="android:titleTextStyle">@style/ActionModeTitleStyle</item>
        <item name="android:subtitleTextStyle">@style/ActionModeSubtitleStyle</item>
    </style>

    <style name="ActionModeTitleStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ActionModeSubtitleStyle" parent="TextAppearance.AppCompat.Widget.ActionMode.Subtitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


     <style name="AnimexxThemeActionBarOverlay" parent="AnimexxTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/animexx_blue_light</item>
        <item name="android:colorBackground">@color/animexx_blue_light</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <!--<style name="PatioToolbarButton" parent="@android:style/Widget.Holo.Button.Borderless">-->
    <style name="PatioToolbarButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="AnimexxSettingsTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/animexx_blue_light</item>
        <item name="android:colorBackground">@color/animexx_blue_light</item>
        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/animexx_blue</item>
        <item name="colorPrimaryDark">@color/animexx_blue_dark</item>
        <item name="colorAccent">@color/animexx_blue</item>

        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorHint">@color/grey</item>

        <!--<item name="actionModeBackground">@color/animexx_blue</item>-->
        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->
        <item name="colorControlNormal">@color/animexx_blue2</item>
        <item name="colorControlActivated">@color/animexx_blue</item>
        <item name="colorControlHighlight">@color/animexx_blue2</item>
    </style>

</resources>