<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.meisterfuu.animexx"
    android:versionCode="62"
    android:versionName="2.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <!-- GCM Permissions -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="de.meisterfuu.animexx.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="de.meisterfuu.animexx.permission.C2D_MESSAGE" />
    <!-- GCM Permissions -->
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />
    <uses-permission android:name="android.permission.WRITE_CALENDAR" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AnimexxTheme" >
        <service
            android:name="de.meisterfuu.animexx.services.CalSyncService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <service
            android:name="de.meisterfuu.animexx.services.AccountService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/account" />
        </service>

        <activity
            android:name="de.meisterfuu.animexx.activitys.main.RequestTokenActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <data
                    android:host="callback"
                    android:scheme="animexx" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.meisterfuu.animexx.activitys.main.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="de.meisterfuu.animexx.activitys.main.LoginActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.meisterfuu.animexx.activitys.ens.SingleENSActivity"
            android:label="@string/title_activity_single_ens"
            android:parentActivityName="de.meisterfuu.animexx.activitys.main.MainActivity" >
        </activity>
        <activity
            android:name="de.meisterfuu.animexx.activitys.ens.NewENSActivity"
            android:label="@string/title_activity_new_ens" >
        </activity>

        <!-- GCM Receiver/Service -->
        <receiver
            android:name="de.meisterfuu.animexx.receiver.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="de.meisterfuu.animexx" />
            </intent-filter>
        </receiver>

        <service android:name="de.meisterfuu.animexx.services.GcmIntentService" />

        <activity
            android:name="de.meisterfuu.animexx.activitys.main.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="de.meisterfuu.animexx.activitys.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.meisterfuu.animexx.activitys.main.MainActivity" />
        </activity>
        <activity
            android:name="de.meisterfuu.animexx.activitys.rpg.RPGDetailActivity"
            android:label="@string/title_activity_rpgdetail"
            android:parentActivityName="de.meisterfuu.animexx.activitys.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.meisterfuu.animexx.activitys.main.MainActivity" />
        </activity>
        <activity
            android:name="de.meisterfuu.animexx.activitys.rpg.RPGPostListActivity"
            android:label="@string/title_activity_rpgpost_list" >
        </activity>
        <activity
            android:name="de.meisterfuu.animexx.activitys.events.SingleEventActivity"
            android:label="@string/title_activity_single_event"
            android:parentActivityName="de.meisterfuu.animexx.activitys.main.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.meisterfuu.animexx.activitys.main.MainActivity" />
        </activity>
    </application>

</manifest>